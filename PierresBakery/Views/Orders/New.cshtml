@{
  Layout = "_Layout";
}

<h1>Add a new order</h1>

<form action='/vendors/@Model.Id/orders/' method="post">
  <input id="categoryId" name="categoryId" type="hidden" value="@Model.Id">
  <label for="orderName">Order Name</label>
  <input id="orderName" name="orderName" type="text">
  <label for="orderDescription">Order Description</label>
  <input id="orderDescription" name="orderDescription" type="text">
  <label for="purchasePrice">Purchase Price</label>
  <input id="purchasePrice" name="purchasePrice" type="number">
  <button type='submit'>Add Order</button>
</form>